<?xml version="1.0" encoding="iso-8859-1"?>
<odoo>   
    <record id="wikucourse_pemrograman_view_tree" model="ir.ui.view">
        <field name="name">wikucourse.pemrograman.view.tree</field>
        <field name="model">wikucourse.pemrograman</field>        
        <field name="arch" type="xml">
           <tree string="wikucourse_pemrogramancourse_tree">
               <field name="name"/>
               <field name="level_belajar"/>
               <field name="biaya"/>
               <field name="kapasitas_kelas"/>
               <field name="kapasitas_sisa"/>
               <field name="startup"/>
           </tree>
       </field>
    </record>
    
    <record id="wikucourse_pemrograman_view_form" model="ir.ui.view">
        <field name="name">wikucourse.pemrograman.inherit.view.form</field>
        <field name="model">wikucourse.pemrograman</field>
        <field name="arch" type="xml">
           <form string="wikucourse_pemrogramancourse_form">
               <sheet>
                   <group>
                       <field name="name"/>
                       <field name="level_belajar"/>
                       <field name="biaya"/>
                       <field name="kapasitas_kelas"/>
                       <field name="startup"/>
                   </group>
               </sheet>
           </form>
       </field>
    </record>
    <!-- wikucourse.pemrograman action window -->
    <record id="wikucourse_pemrograman_action" model="ir.actions.act_window">
        <field name="name">Kursus Pemrograman</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wikucourse.pemrograman</field>
        <field name="view_mode">tree,form</field>            
       
    </record>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="wikucourse_pemrogramancategory_menu_act" 
        name="Pemrograman" 
        parent="wikucourse_kursus_categ" 
        action="wikucourse_pemrograman_action" 
        sequence="10"/>
    

</odoo>

